<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/mainGreen"
    tools:context=".ExpenseReceiptActivity" >

    <TextView
        android:id="@+id/receiptTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Receipt"
        android:textColor="@color/mainYellow"
        android:textSize="6mm" />

    <Button
        android:id="@+id/receiptSubmitButton"
        android:layout_width="wrap_content"
        android:layout_height="10mm"
        android:layout_alignLeft="@+id/receiptTitle"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@color/mainYellow"
        android:onClick="OnClick_SubmitReceipt"
        android:text="Submit Receipt"
        android:textColor="@color/mainGreen" />

    <ImageButton
        android:id="@+id/TakeAPhoto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/receiptSubmitButton"
        android:layout_alignLeft="@+id/receiptTitle"
        android:layout_below="@+id/receiptTitle"
        android:layout_weight="0.82"
        android:src="@drawable/ic_action_search" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TakeAPhoto"
        android:layout_alignTop="@+id/TakeAPhoto" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/receiptTitle"
        android:layout_marginLeft="73dp"
        android:layout_marginTop="21dp"
        android:layout_toRightOf="@+id/receiptTitle" />

</RelativeLayout>

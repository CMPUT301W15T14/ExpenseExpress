<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/mainGreen"
    tools:context=".AddDestinationsActivity" >

    <TextView
        android:id="@+id/addDestinationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Add Destination"
        android:layout_centerHorizontal="True"
        android:textColor="@color/mainYellow"
        android:textSize="6mm" />

    <EditText
        android:id="@+id/addReasonTextField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="True"
        android:layout_alignLeft="@+id/addDestinationTextField"
        android:layout_below="@+id/addDestinationTextField"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="Add Reason Here" >


    </EditText>

    <TextView
        android:id="@+id/addDestLongitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/AddDestLatitude"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/AddDestLatitude"
        android:text="Longitude:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/addDestinationButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addDestGPSButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:text="Add Destination" />

    <Button
        android:id="@+id/addDestGPSButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/addDestLongitude"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/addDestLongitude"
        android:text="Add By GPS" />

    <Button
        android:id="@+id/addDestMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/addDestGPSButton"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/addDestGPSButton"
        android:text="Add By Map" />

    <EditText
        android:id="@+id/addDestinationTextField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addDestinationTitle"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="Add Destination Here" />

    <TextView
        android:id="@+id/AddDestLatitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/addReasonTextField"
        android:layout_alignRight="@+id/addDestinationTitle"
        android:layout_below="@+id/addReasonTextField"
        android:text="Latitude:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>

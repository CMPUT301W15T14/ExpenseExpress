                android:name="android.support.PARENT_ACTIVITY"
                android:value="ExpenseEditActivity" />
        </activity>
        <activity
            android:name="team14.expenseexpress.activity.ClaimEditActivity"
            android:label="@string/title_activity_claim_edit"
